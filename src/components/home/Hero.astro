---
import { Picture } from '@astrojs/image/components'
---

<section class="mx-4 md:mx-8 relative overflow-hidden">
  <Picture
    src={import('~/assets/images/gemstones_desktop_banner.webp')}
    widths={[1920]}
    format={['avif', 'webp']}
    loading="eager"
    alt="Hero image"
    class="hidden md:block w-full h-[calc(100vh-7rem)] object-cover"
  />
  <Picture
    src={import('~/assets/images/gemstones_mobile_banner.webp')}
    widths={[1080]}
    format={['avif', 'webp']}
    loading="eager"
    alt="Hero image"
    class="md:hidden w-full h-[calc(100vh-4rem)] object-cover"
  />
</section>
