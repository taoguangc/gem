---
import { Picture } from '@astrojs/image/components'
---

<section class="py-8">
  <div class="grid lg:grid-cols-3 grid-rows-2 border-t border-l">
    <div class="p-12 grid place-items-center border-r border-b min-h-[75vw] lg:min-h-[33vw]">
      <a
        href="/collaborations/"
        class="w-full h-full flex justify-center items-center duration-300 group hover:-translate-y-4"
      >
        <h2 class="text-5xl 2xl:text-6xl font-light">合作联名</h2>
        <h3
          class="inline-block py-1 opacity-0 absolute bottom-4 text-xs uppercase tracking-widest duration-300 after:content-[''] after:absolute after:left-0 after:bottom-0 after:bg-black after:w-0 after:h-px after:duration-300 group-hover:opacity-100 group-hover:after:w-full"
        >
          View All
        </h3>
      </a>
    </div>
    <div class="border-r border-b"></div>
    <div class="relative overflow-hidden row-span-2 border-r border-b">
      <Picture
        src={import('~/assets/images/butterfly-earrings.webp')}
        widths={[1024]}
        quality={30}
        format={['avif', 'webp']}
        alt="合作联名"
        class="h-full object-cover"
        data-sal="fade"
      />
    </div>
    <div class="border-r border-b"></div>
    <div class="border-r border-b"></div>
  </div>
</section>
